{
    "name": "alexpcooper/newsletters-to-kindle",
    "description": "Uses IMAP to check a mailbox, converts HTML newsletter emails to PDFs and sends them to Amazon Kindle email address",
    "keywords": ["amazon", "kindle", "email", "pdf", "mpdf", "epub", "html", "utf8", "utf-8", "imap", "smtp"],
    "homepage": "https://github.com/alexpcooper/newsletters-to-kindle/",
    "type": "project",
    "license": "mit",
    "require": {
        "php": ">=7.4"
        "mpdf/mpdf": "^8.0",
        "zbateson/mail-mime-parser": "^2.2",
        "phpmailer/phpmailer": "^6.6"
    },
    "source": {
          "url": "https://github.com/alexpcooper/newsletters-to-kindle.git",
          "type": "git",
          "reference": "master"
    },
    "autoload": {
        "psr-4": {
            "AlexPCooper\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Alex Cooper",
            "email": "alex.cooper.t21@gmail.com",
            "homepage": "https://alexpcooper.co.uk"
        }
    ]
}
